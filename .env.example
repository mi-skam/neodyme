# Database Configuration
DATABASE_URL=sqlite+aiosqlite:///./neodyme.db
# DATABASE_URL=postgresql+asyncpg://neodyme:password@localhost:5432/neodyme

# Application Settings
APP_NAME=Neodyme API
APP_VERSION=0.1.0
DEBUG=true
ENVIRONMENT=development

# API Configuration
API_V1_PREFIX=/api/v1
DOCS_URL=/docs
REDOC_URL=/redoc

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production-at-least-32-characters
ACCESS_TOKEN_EXPIRE_MINUTES=30

# PostgreSQL (for Docker)
POSTGRES_DB=neodyme
POSTGRES_USER=neodyme
POSTGRES_PASSWORD=password

# pgAdmin (for Docker)
PGADMIN_DEFAULT_EMAIL=admin@neodyme.local
PGADMIN_DEFAULT_PASSWORD=admin